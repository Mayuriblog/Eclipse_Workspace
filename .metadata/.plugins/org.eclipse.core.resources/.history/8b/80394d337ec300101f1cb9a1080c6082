package com.college;

import java.util.Scanner;

public class EmployeeApp {
    static void menu()
    {
    	System.out.println("List of Operations \n -----------------------\n 1. Insert \n 2. update \n 3. find by id \n 4. find all \n 5. delete \n 6. exit\n enter your choice \n");
    	    	
    }
	public static void main(String args[])
	{
		
		Scanner sc=new Scanner(System.in);
		EmployeeDAO edao=new EmployeeDAO();
		do {
				menu();
				int ch=sc.nextInt();
				switch(ch)
				{
				case 1:
					System.out.println("enter employee values\n");
					String name=sc.next();
					String email=sc.next();
					double salary=sc.nextDouble();
					Employee e=new Employee(name,email,salary);
					int result=edao.save(e);
					if(result==1)
					{
						System.out.println("Record Inserted Successfully");
					}
					else
					{
						System.out.println("Record not inserted");
						
					}
					break;
				case 2:
					break;
				case 3:
					break;
				case 4:
					break;
				case 5: 
					break;
				case 6: System.exit(0);
				default: System.out.println("Invalid choice");
				}
				
		}while(true);
		
		
	}
	
}
